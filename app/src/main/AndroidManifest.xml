<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edward.sanctuary">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_memory_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_memory_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cardactivity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <!--  android:theme="@style/Night" />-->

        <activity android:name=".AddCard">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.edward.sanctuary.cardactivity.MainActivity" />
        </activity>
        <activity android:name=".cardactivity.SelectCardForDeck">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.edward.sanctuary.cardactivity.MainActivity" />
        </activity>
        <activity
            android:name=".cardactivity.SelectCardsForDeck"
            android:label="@string/title_activity_select_cards_for_deck"
            android:parentActivityName=".cardactivity.SelectCardForDeck"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.edward.sanctuary.cardactivity.SelectCardForDeck" />
        </activity>
        <activity android:name=".cardactivity.ManageDecks">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.edward.sanctuary.cardactivity.MainActivity" />
        </activity>
        <activity android:name=".settings.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.edward.sanctuary.cardactivity.MainActivity" />
        </activity>
        <activity
            android:name=".cardactivity.ManageCardsInDeck"
            android:label="@string/title_activity_manage_cards_in_deck"
            android:parentActivityName=".cardactivity.ManageDecks"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.edward.sanctuary.cardactivity.ManageDecks" />
        </activity>
    </application>

</manifest>